# =============================================================================
# JobKit - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your deployment.
# All variables use the JOBKIT_ prefix.

# --- Authentication ---
# Set to false for multi-user mode (requires login)
JOBKIT_SINGLE_USER_MODE=true

# JWT secret key â€” MUST be changed in production!
# Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
JOBKIT_SECRET_KEY=development-secret-key-change-in-production

# Token lifetimes
JOBKIT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JOBKIT_REFRESH_TOKEN_EXPIRE_DAYS=7

# --- OAuth Providers (optional) ---
# Google: https://console.cloud.google.com/apis/credentials
# JOBKIT_GOOGLE_CLIENT_ID=your-google-client-id
# JOBKIT_GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub: https://github.com/settings/developers
# JOBKIT_GITHUB_CLIENT_ID=your-github-client-id
# JOBKIT_GITHUB_CLIENT_SECRET=your-github-client-secret

# --- AI / Ollama ---
JOBKIT_AI_ENABLED=true
JOBKIT_OLLAMA_BASE_URL=http://localhost:11434
JOBKIT_OLLAMA_MODEL=mistral:7b-instruct
JOBKIT_AI_TEMPERATURE=0.7
JOBKIT_AI_MAX_TOKENS=1024
JOBKIT_AI_FALLBACK_TO_TEMPLATE=true

# --- Database ---
# SQLite (default, good for single-user):
JOBKIT_DATABASE_URL=sqlite:///./data/jobkit.db
# PostgreSQL (recommended for multi-user / production):
# JOBKIT_DATABASE_URL=postgresql://user:password@localhost:5432/jobkit

# --- CORS ---
# Comma-separated list of allowed origins. Use "*" for development.
# For production: JOBKIT_ALLOWED_ORIGINS=https://yourdomain.com
JOBKIT_ALLOWED_ORIGINS=*
